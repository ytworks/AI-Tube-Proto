# LLM Provider Selection
# Choose between "openai" or "claude" (default: openai)
LLM_PROVIDER=openai

# OpenAI API Configuration
# APIキーがない場合でも、システムは動作しますが、
# 「APIキーをセットしてください」という音声メッセージが返されます
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude) API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI Model Configuration
# Chat completion model (default: gpt-3.5-turbo)
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview, gpt-4-0125-preview
OPENAI_CHAT_MODEL=gpt-3.5-turbo

# Speech-to-Text model (default: whisper-1)
OPENAI_WHISPER_MODEL=whisper-1

# Text-to-Speech model (default: tts-1)
# Options: tts-1, tts-1-hd
OPENAI_TTS_MODEL=tts-1

# TTS Voice (default: alloy)
# Options: alloy, echo, fable, onyx, nova, shimmer
OPENAI_TTS_VOICE=alloy

# TTS Provider Selection
# Choose between "openai" or "local" (default: openai)
# "local" uses MeloTTS which runs on your machine
TTS_PROVIDER=openai

# MeloTTS Configuration (when TTS_PROVIDER=local)
# Language: EN, JP, ZH (default: JP)
MELOTTS_LANGUAGE=JP

# Device: cpu, cuda, or auto (default: auto)
MELOTTS_DEVICE=auto

# Claude Model Configuration
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
CLAUDE_MODEL=claude-3-opus-20240229

# Optional: Google Cloud API (for alternative speech services)
# GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000